
@{
    ViewBag.Title = "Edit";
    var item = ViewBag.empobj as HTMlCrud.EDM.tblemployee;
}

<h2>Edit</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="form-group" hidden>
                <label class="control-label col-md-2">Employee Id</label>
                <input type="text" name="txtid" class="form-control" value="@item.emp_id" />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">First Name</label>
                <input type="text" name="txtfname" class="form-control" value="@item.f_name"  />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Salary</label>
                <input type="text" name="txtsalary" class="form-control" value="@item.salary"  />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Mobile</label>
                <input type="text" name="txtmobile" class="form-control" value="@item.mobile"  />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Email</label>
                <input type="text" name="txtemail" class="form-control" value="@item.email"  />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Gender</label>
                <input type="text" name="txtgender" class="form-control" value="@item.gender"  />
            </div>
            <div class="form-group">
                <label class="control-label col-md-2"></label>
                <input type="submit" class="btn btn-info" value="Update" />
            </div>
        </div>
    }
</div>